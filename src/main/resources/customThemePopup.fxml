<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<Stage xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <AnchorPane prefHeight="400.0" prefWidth="300.0">
            <children>
               <VBox prefHeight="400.0" prefWidth="300.0">
                  <children>
                     <Label alignment="CENTER" layoutX="150.0" layoutY="200.0" prefHeight="50.0" prefWidth="300.0" text="Custom Theme Picker">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                        <VBox.margin>
                           <Insets top="40.0" />
                        </VBox.margin>
                     </Label>
                     <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="300.0" text="Title Color">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin>
                     </Label>
                     <ColorPicker layoutX="150.0" layoutY="300.0" prefHeight="30.0" prefWidth="300.0">
                        <VBox.margin>
                           <Insets left="100.0" right="100.0" />
                        </VBox.margin>
                     </ColorPicker>
                     <Label alignment="CENTER" prefHeight="20.0" prefWidth="300.0" text="Weekday Color">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin>
                     </Label>
                     <ColorPicker prefHeight="30.0" prefWidth="300.0">
                        <VBox.margin>
                           <Insets left="100.0" right="100.0" />
                        </VBox.margin>
                     </ColorPicker>
                     <Label alignment="CENTER" prefHeight="20.0" prefWidth="300.0" text="Weekpane Color">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin>
                     </Label>
                     <ColorPicker prefHeight="30.0" prefWidth="300.0">
                        <VBox.margin>
                           <Insets left="100.0" right="100.0" />
                        </VBox.margin>
                     </ColorPicker>
                  </children>
               </VBox>
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
